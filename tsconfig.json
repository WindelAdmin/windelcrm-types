{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@pessoa/*": ["src/pessoa/*"],
      "@enums/*": ["src/enums/*"],
      "@usuario/*": ["src/pessoa/usuario/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
