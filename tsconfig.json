{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@pessoa/*": ["@interfaces/*"],
      "@enums/*": ["@enums/*"],
      "@usuario/*": ["@interfaces/usuario/*"]
    }
  },
  "include": ["src/**/*", "@enums", "@interfaces"],
  "exclude": ["node_modules", "dist"]
}
