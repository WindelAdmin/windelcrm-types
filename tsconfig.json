{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "target": "ES2023",
    "module": "commonjs",
    "lib": ["ES2023"],
    "esModuleInterop": true
  },
  "paths": {
    "@pessoa/*": ["pessoa/*"],
    "@enums/*": ["enums/*"],
    "@usuario/*": ["pessoa/usuario/*"]
  },
  "include": ["enums", "pessoa"],
  "exclude": ["node_modules", "dist"]
}
